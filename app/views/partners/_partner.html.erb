
<div class="box panel panel-default">
  <div class="text-center"><%= image_tag partner.avatar.url(:large), alt: partner.name %></div>

<div class="panel-body">

  <% if current_user %>
    <div class="actions">
      <%= link_to edit_partner_path(partner) do %>
        <span></span>
        Edit
      <% end %>
      <%= link_to partner, method: :delete, data: { confirm: 'Are you sure?' } do %>
        <span></span>
        Delete
      <% end %>
    </div>
  <% end %>
</div>
</div>
