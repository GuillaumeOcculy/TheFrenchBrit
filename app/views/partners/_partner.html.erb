
<div class="box panel panel-default">
  <div class="text-center"><%= image_tag partner.avatar.url(:medium), alt: partner.name %></div>

<div class="panel-body">
  <p class='text-center'>
      <%= link_to partner.name, partner %>
  </p>

  <% if current_user %>
    <div class="actions">
      <%= link_to edit_partner_path(partner) do %>
        <span class="glyphicon glyphicon-edit"></span>
        Edit
      <% end %>
      <%= link_to partner, method: :delete, data: { confirm: 'Are you sure?' } do %>
        <span class="glyphicon glyphicon-trash"></span>
        Delete
      <% end %>
    </div>
  <% end %>
</div>
</div>
