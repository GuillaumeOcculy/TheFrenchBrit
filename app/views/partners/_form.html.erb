<%= semantic_form_for @partner, :html => { :multipart => true } do |f| %>
  <%= f.semantic_errors %>

  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :description, input_html: {rows: 3, cols: 3} %>
    <%= f.input :link, input_html: {placeholder: 'http://thefrenchbrit.com'} %>
    <%= f.input :priority, input_html: {value: Partner.count } %>
    <%= f.input :avatar %>

  <% end %>

  <div class="row text-center">
    <%= f.actions do %>
      <%= f.submit 'Submit', class: 'btn btn-lg btn-primary' %>
    <% end %>
  </div>


<% end %>
