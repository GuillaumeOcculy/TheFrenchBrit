<h1 class='text-center'>Contact</h1>

<div class="row">
  <div class="col-xs-6">
    <h2 class='center'> How to find us ?</h2>
    <address>
      <strong>The French Brit</strong><br>
      3, Rue de Téhéran<br>
      Paris, 75008, France<br>
      <abbr title="Phone">Phone:</abbr> (00) 33-1 46 64 47 70 <br>
      <a href="mailto:info@thefrenchbrit.com">racheldesmarest@thefrenchbrit.com</a>
    </address>

    <div style='width: 400px;'>
      <div id="map" style='width: 400px; height: 300px;'></div>
    </div>
  </div>

  <div class="col-xs-6">
    <h2 class='center'>Send us an email</h2>
    <%= semantic_form_for @contact, :html => { :multipart => true } do |f| %>
      <%= f.semantic_errors %>

      <%= f.inputs do %>
        <%= f.input :name, input_html: {placeholder: 'John Doe'} %>
        <%= f.input :email, input_html: {placeholder: 'john@doe.com'} %>
        <%= f.input :phone, input_html: {placeholder: '+33 6 06 06 06 06'} %>
        <%= f.input :message, input_html: {rows: 3, cols: 3} %>
      <% end %>

      <div class="row text-center">
        <%= f.actions do %>
          <%= f.submit 'Submit', class: 'btn btn-lg btn-primary' %>
        <% end %>
      </div>
    <% end %>
    </div>

  </div>


  <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

  <script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers([
      {
        "lat": 48.856614,
        "lng": 2.3522219000000177,
        "picture": {
          "url": "https://addons.cdn.mozilla.net/img/uploads/addon_icons/13/13028-64.png",
          "width":  36,
          "height": 36
        },
        "infowindow": "The French Brit!"
      }
    ]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });

  </script>
