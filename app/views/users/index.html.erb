<h1 class='text-center'>Users</h1>

<table class="table table-striped">
  <tr>
    <td>
      Email
    </td>
    <td>
      Lastname
    </td>
    <td>
      Firstname
    </td>
    <td>
      Actions
    </td>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td>
        <%= user.email %>
      </td>
      <td>
        <%= user.firstname %>
      </td>
      <td>
        <%= user.lastname %>
      </td>
      <td>
        <%= link_to 'Show',  user %> / 
        <%= link_to 'Edit',  edit_user_path(user) %>
      </td>

    </tr>
  <% end %>
</table>
