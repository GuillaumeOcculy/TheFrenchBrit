<h1 class='text-center'> <%= @pin.title %> </h1>

<div class="row text-center">
  <div class="col-md-6 col-md-offset-3">
    <% if @pin.is_video? %>
      <p class='text-center'><%= link_to @pin.link, @pin.link, target: '_blank' %></p>
      <div class="embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item" src= <%= @pin.video_reference %>></iframe>
      </div>
    <% else %>
      <%= image_tag @pin.avatar.url(:medium) %>
    <% end %>
    <%= simple_format(@pin.description) %>
  </div>
</div>
